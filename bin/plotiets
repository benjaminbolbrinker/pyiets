#!/usr/bin/env python3
import sys
import numpy as np
import matplotlib.pyplot as plt


if __name__ == '__main__':
    filename = sys.argv[1]
    savepic = sys.argv[2]

    iets = np.loadtxt(filename, dtype={
        'names': ('mode_idx', 'wavenumber', 'energy', 'intensity'),
        'formats': ('i8', 'f8', 'f8', 'f8')
        })

    plt.stem(iets['wavenumber'], iets['intensity'])

    plt.savefig(savepic)
